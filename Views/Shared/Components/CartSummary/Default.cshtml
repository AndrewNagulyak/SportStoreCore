@model Cart

<small class="navbar-text">
    <b>Your Cart :</b>
    @Model.Lines.Sum(p => p.Quantity) items
    @Model.ComputeTotalValue().ToString()
    
</small>

<a class="btn btn-info btn-lg" asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
    <span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart
</a>
