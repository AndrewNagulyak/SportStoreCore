@model LoginModel
@{
    ViewBag.Title = "Log In";
    Layout = "_AdminLayout";
}


<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Login" asp-controller="Account" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="login"></label>
        <input asp-for="login" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="password"></label>
        <input asp-for="password" class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Log In</button>
    <a asp-action="Registration" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary">Registration</a>
    <a asp-action="GoogleLogin" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary">Sign in Google</a>

</form>
